<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FindPwActivity">

<LinearLayout
    android:layout_marginLeft="40dp"
    android:layout_marginTop="100dp"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimaryDark"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_mail_outline_white_24dp" />

    <EditText
        android:id="@+id/find_pw_et_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_edittext_rect_primary_dark"
        android:hint="아이디(이메일)"
        android:inputType="textWebEmailAddress"
        android:paddingLeft="16dp"

        />
</LinearLayout>


<TextView
    android:layout_width="350dp"
    android:layout_marginTop="100dp"
android:id="@+id/find_pw_tv_find"
    android:layout_marginLeft="40dp"
android:layout_height="40dp"
android:layout_marginBottom="32dp"
android:background="@color/colorPrimaryDark"
android:fontFamily="@font/bmjua"
android:gravity="center"
android:text="비밀번호 찾기"
android:textColor="@color/color_white"
android:textSize="20dp" />


<TextView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="center"
android:textColor="@color/color_medium_gray"
android:fontFamily="@font/bmjua"
android:lineSpacingExtra="8dp"
android:textSize="15sp"
android:text="비밀번호는 암호화 처리되어 관리자도 확인할 수 없습니다\n가입하신 이메일로 비밀번호 재설정 코드를 보내드립니다\n메일함을 확인해주세요" />
    </LinearLayout>

